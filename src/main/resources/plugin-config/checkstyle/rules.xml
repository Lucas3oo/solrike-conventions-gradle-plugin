<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
          "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
          "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!-- https://github.com/checkstyle/checkstyle -->

<module name="Checker">
  <module name="SuppressionFilter">
    <property name="file"
      value="${config_loc}/suppressions.xml" />
    <property name="optional" value="true"/>
  </module>
  <property name="charset" value="UTF-8" />

  <property name="severity" value="warning" />

  <property name="fileExtensions" value="java,properties,xml,json" />

  <!-- add support for // CHECKSTYLE:OFF // CHECKSTYLE:ON  in plain text files-->
  <module name="SuppressWithPlainTextCommentFilter" />

  <module name="FileLength">
    <property name="max" value="2400" />
  </module>

  <module name="UniqueProperties"/>

  <!-- Checks that property files contain the same keys. -->
  <module name="Translation"/>

  <!-- Checks for whitespace -->
  <!-- See http://checkstyle.sf.net/config_whitespace.html -->
  <!-- tabs not allowed -->
  <module name="FileTabCharacter">
    <property name="eachLine" value="true" />
  </module>


  <!-- Miscellaneous other checks. -->

  <!-- Use proper logger instead. Use java.util.concurrent.Executor or @Async
    or @EnableScheduling instead. -->
  <module name="RegexpSingleline">
    <property name="format"
      value="System.exit\(|System.out.println\(|System.err.println\(|printStackTrace\(|new Thread\(" />
  </module>

  <module name="LineLength">
    <property name="max" value="120" />
    <property name="fileExtensions" value="java,xml" />
    <property name="ignorePattern"
      value="^package.*|^import.*|a href|href|http://|https://|ftp://" />
  </module>


  <module name="TreeWalker">
    <!-- add support for //CHECKSTYLE:OFF //CHECKSTYLE:ON -->
    <module name="SuppressionCommentFilter" />

    <module name="IllegalImport">
      <property name="illegalClasses"
        value="org\.junit\.Test, org\.junit\.Assert.*, sun\.*" />
      <property name="regexp" value="true" />
    </module>

    <module name="UnusedImports" />
    <module name="RedundantImport" />
    <module name="ModifierOrder" />


    <!-- Checks for Naming Conventions. -->
    <!-- See https://checkstyle.org/config_naming.html -->
    <module name="ConstantName">
      <property name="format"
        value="^s[A-Z][a-z0-9][a-zA-Z0-9]*$|^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$" />
      <message key="name.invalidPattern"
        value="Constant name ''{0}'' must match pattern ''{1}''." />
    </module>
    <!--
    <module name="MemberName">
      <property name="format"
        value="^m[A-Z][a-z0-9][a-zA-Z0-9]*$" />
      <message key="name.invalidPattern"
        value="Member name ''{0}'' must match pattern ''{1}''." />
    </module>
    -->
    <module name="StaticVariableName">
      <property name="format"
        value="^s[A-Z][a-z0-9][a-zA-Z0-9]*$" />
      <message key="name.invalidPattern"
        value="Static variable name ''{0}'' must match pattern ''{1}''." />
    </module>


    <module name="LocalFinalVariableName" />
    <module name="LocalVariableName" />
    <module name="MethodName" />
    <module name="PackageName" />
    <module name="ParameterName" />

    <module name="TrailingComment"/>
    <module name="TypeName" />

    <module name="AbbreviationAsWordInName">
      <!-- 0 menas strict cameCase -->
      <property name="allowedAbbreviationLength" value="0" />
    </module>

    <module name="MethodLength">
      <property name="max" value="300" />
    </module>

    <module name="LambdaBodyLength">
      <property name="max" value="20" />
    </module>


    <module name="OneStatementPerLine" />
    <module name="NeedBraces" />
    <module name="LeftCurly" />
    <module name="RightCurly">
      <property name="option" value="alone" />
    </module>

    <module name="ThrowsCount" />

    <!-- Checks for common coding problems -->
    <!-- See http://checkstyle.sf.net/config_coding.html -->
    <module name="EmptyStatement" />
    <module name="EqualsHashCode" />
    <module name="IllegalCatch">
      <property name="illegalClassNames"
        value="Throwable,java.lang.Throwable" />
    </module>
    <module name="IllegalInstantiation" />
    <module name="IllegalThrows">
      <property name="illegalClassNames"
        value="NullPointerException" />
    </module>
    <module name="IllegalType" />
    <module name="InnerAssignment" />
    <module name="MissingSwitchDefault" />
    <module name="SimplifyBooleanExpression" />
    <module name="SimplifyBooleanReturn" />

  </module>
</module>
